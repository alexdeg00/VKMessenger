<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_theme" parent="android:Theme.NoTitleBar">
        <item name="android:windowBackground">@drawable/im_background_repeat</item>
        <item name="android:listViewStyle">@style/TransparentListView</item>
        <item name="android:expandableListViewStyle">@style/TransparentExpandableListView</item>
   		<item name="android:fastScrollThumbDrawable">@drawable/fastscrollthumb</item>
    </style>

    <style name="activity_theme" parent="android:Theme"></style>

    <style name="TransparentListView" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="TransparentExpandableListView" parent="@android:style/Widget.ExpandableListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="NotificationText">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="NotificationTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>